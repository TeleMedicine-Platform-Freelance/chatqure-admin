# =============================================================================
# Katalyst Admin - Environment Configuration Example
# =============================================================================
# Copy this file to .env (development) or .env.production (production)
# and fill in the appropriate values.
# ============================================================================= 

# Application
# -----------
# VITE_APP_NAME: Display name of the application
# VITE_APP_ENVIRONMENT: 'development' | 'production'
VITE_APP_NAME=Katalyst Admin
VITE_APP_ENVIRONMENT=development

# API Configuration
# -----------------
# VITE_API_BASE_URL: Base URL for all API requests
# VITE_API_TIMEOUT: Request timeout in milliseconds
VITE_API_BASE_URL=http://localhost:5173
VITE_API_TIMEOUT=30000

# Authentication
# --------------
# VITE_AUTH_LOGIN_PATH: Path to redirect unauthenticated users
# VITE_AUTH_TOKEN_KEY: LocalStorage key for auth token
# VITE_AUTH_CURRENT_USER_KEY: LocalStorage key for current user data
VITE_AUTH_LOGIN_PATH=/auth/login
VITE_AUTH_TOKEN_KEY=katalyst_auth_token
VITE_AUTH_CURRENT_USER_KEY=katalyst_auth_current_user

# Mock Service Worker (MSW)
# -------------------------
# VITE_USE_MSW: Enable MSW for API mocking
#   'true'  - Use MSW mock handlers (development/demo)
#   'false' - Use real API endpoints (production with backend)
VITE_USE_MSW=true
